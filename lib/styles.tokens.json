{
  "colors": {
    "primary": {
      "black": "#000000",
      "white": "#FFFFFF",
      "red": "#E01A2E"
    },
    "gradients": {
      "redAccent": "linear-gradient(135deg, #E01A2E 0%, #000000 100%)",
      "darkRed": "linear-gradient(180deg, #000000 0%, #1a0000 100%)"
    }
  },
  "typography": {
    "fonts": {
      "primary": ["'Bauhaus 93'", "'ITC Bauhaus Heavy'", "'Montserrat'", "'Gotham'", "'Roboto'", "'Futura'", "Arial", "sans-serif"],
      "weights": {
        "heavy": 900,
        "bold": 700,
        "black": 800
      }
    },
    "sizes": {
      "kiosk": {
        "headline": "72px",
        "subheadline": "56px",
        "body": "40px",
        "caption": "36px",
        "small": "32px"
      },
      "mobile": {
        "headline": "48px",
        "subheadline": "36px",
        "body": "28px",
        "caption": "24px",
        "small": "20px"
      }
    },
    "lineHeights": {
      "tight": 0.9,
      "normal": 1.2,
      "loose": 1.5
    }
  },
  "layout": {
    "canvas": {
      "width": 1080,
      "height": 1920,
      "aspectRatio": "9:16"
    },
    "grid": {
      "columns": 12,
      "gap": "20px",
      "margin": "40px"
    },
    "spacing": {
      "xs": "8px",
      "sm": "16px",
      "md": "24px",
      "lg": "32px",
      "xl": "48px",
      "xxl": "64px"
    }
  },
  "animations": {
    "durations": {
      "fast": "0.2s",
      "normal": "0.5s",
      "slow": "1s",
      "verySlow": "2s"
    },
    "easings": {
      "easeOut": "cubic-bezier(0.25, 0.46, 0.45, 0.94)",
      "easeIn": "cubic-bezier(0.55, 0.055, 0.675, 0.19)",
      "easeInOut": "cubic-bezier(0.645, 0.045, 0.355, 1)"
    }
  },
  "effects": {
    "shadows": {
      "text": "0 2px 4px rgba(0, 0, 0, 0.5)",
      "card": "0 4px 12px rgba(0, 0, 0, 0.3)",
      "logo": "0 0 20px rgba(224, 26, 46, 0.3)"
    },
    "blur": {
      "subtle": "blur(2px)",
      "medium": "blur(8px)",
      "heavy": "blur(20px)"
    }
  }
}